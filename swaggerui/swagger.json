{
    "openapi": "3.0.0",
    "info": {
        "title": "Hanami Api",
        "version": "0.1"
    },
    "paths": {
        "/api/user": {
            "get": {
                "operationId": "App\\Controllers\\Rest\\UserController::index",
                "responses": {
                    "200": {
                        "description": "returns all users"
                    }
                }
            }
        },
        "/api/user/{id}": {
            "get": {
                "operationId": "App\\Controllers\\Rest\\UserController::get",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "user id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "returns the user with specified id"
                    }
                }
            }
        }
    }
}